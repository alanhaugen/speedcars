#############################################################################
# Executable name
#############################################################################

TARGET = app

#############################################################################
# Libraries 
#############################################################################

LIBS = \
    -lcore

#############################################################################
# Source and header files
#############################################################################

SOURCES = \
    source/main.cpp

HEADERS =

#############################################################################
# Setup build platform rules 
#############################################################################

SOLIDCORE = ../../..

include $(SOLIDCORE)/Makefile.rules

#############################################################################
# Build as executable
#############################################################################

debug: bin/$(OUTPUT_DIR)/$(TARGET)$(EXE)
release: bin/$(OUTPUT_DIR)/$(TARGET)$(EXE)

bin/$(OUTPUT_DIR)/$(TARGET)$(EXE): $(DEPS)
